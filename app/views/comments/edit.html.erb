<h2 class="mb-4">✏️ Modifier ton commentaire</h2>

<%= form_with(model: [@gossip, @comment], local: true) do |form| %>
<div class="mb-3">
    <%= form.label :content, "Ton commentaire", class: "form-label" %>
    <%= form.text_area :content, rows: 4, class: "form-control" %>
</div>

<div class="d-flex gap-2">
    <%= form.submit "💾 Enregistrer", class: "btn btn-success" %>
    <%= link_to "↩️ Annuler", gossip_path(@gossip), class: "btn btn-secondary" %>
</div>
<% end %>