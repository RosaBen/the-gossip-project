<div class="container">
    <h2 class="mb-4">Tous les Gossips</h2>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

        <% @gossips.each do |gossip| %>
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary"><%= gossip.title %></h5>
                    <p class="card-text"><%= truncate(gossip.content, length: 120, separator: ' ') %></p>
                    <hr>
                    <p class="card-subtitle text-muted small">
                        ðŸ’¬ Par <strong><%= gossip.user.fullname %></strong>
                        <% if gossip.user.city %>
                        de <strong><%= gossip.user.city.name %></strong>
                        <% end %>
                    </p>
                    <%= link_to "Lire plus", gossip_path(gossip), class: "btn btn-outline-primary mt-2" %>
                </div>
            </div>
        </div>
        <% end %>

    </div>
</div>