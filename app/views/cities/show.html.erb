<div class="container">
    <%= link_to "← Retour aux gossips", gossips_path, class: "btn btn-outline-secondary mb-4" %>

    <h2 class="mb-4">Gossips à <%= @city.name %></h2>

    <% if @gossips.any? %>
    <% @gossips.each do |gossip| %>
    <div class="card mb-3 shadow-sm">
        <div class="card-body">
            <h5 class="card-title text-primary"><%= gossip.title %></h5>
            <p class="card-text"><%= truncate(gossip.content, length: 120) %></p>

            <div class="d-flex justify-content-between align-items-center">
                <%= link_to "Lire plus", gossip_path(gossip), class: "btn btn-outline-primary btn-sm" %>

                <% if (user = gossip.author&.linked_user) %>
                <span class="text-muted small">
                    Par <%= link_to user.fullname, user_path(user), class: "text-decoration-none" %>
                </span>
                <% else %>
                <span class="text-muted small">Auteur inconnu</span>
                <% end %>
            </div>
        </div>
    </div>
    <% end %>
    <% else %>
    <p class="text-muted">Aucun gossip trouvé dans cette ville.</p>
    <% end %>
</div>