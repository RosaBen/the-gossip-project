<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px;">
        <div class="text-center">
            <div class="mx-auto mb-3" style="width: 100px; height: 100px; overflow: hidden; border-radius: 50%; border: 2px solid #ccc; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
                <%= image_tag 'placeholder_avatar.png', alt: "Avatar", style: "width: 100%; height: 100%; object-fit: cover;" %>
            </div>
            <h2 class="text-primary">Se connecter</h2>
            <p class="text-muted mb-4">Accède à ton espace confidentiel</p>
        </div>

        <%= form_with url: login_path, method: :post, local: true do %>
        <div class="mb-3">
            <%= label_tag :first_name, "Prénom", class: "form-label" %>
            <%= text_field_tag :first_name, nil, class: "form-control", required: true, autofocus: true, placeholder: "Entrez votre prénom" %>
        </div>

        <div class="mb-3">
            <%= label_tag :last_name, "Nom", class: "form-label" %>
            <%= text_field_tag :last_name, nil, class: "form-control", required: true, placeholder: "Entrez votre nom" %>
        </div>

        <div class="d-grid">
            <%= submit_tag "Se connecter", class: "btn btn-primary btn-block" %>
        </div>
        <% end %>
    </div>
</div>